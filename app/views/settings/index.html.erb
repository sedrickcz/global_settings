<div class="page-header">
  <h1>Settings <small><%= link_to "Add New Setting", new_setting_url, class: "btn btn-success btn-xs" %></small></h1>
</div>

<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Value</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @settings.each do |setting| %>
              <tr>
                <td><%= setting.name %></td>
                <td><%= setting.value %></td>
                <td class="text-right">
                  <%= link_to "Edit", edit_setting_url(setting), class: "btn btn-info btn-xs" %>
                  <%= link_to "Delete", setting_url(setting), method: :delete, class: "btn btn-danger btn-xs" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
