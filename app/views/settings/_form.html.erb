<%= form_for @setting, html: {class: "form-horizontal"} do |f| %>

  <%= render '/shared/errors_explanation', object: @setting %>

  <div class="form-group required">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control", placeholder: "Setting name"  %>
    </div>
  </div>

  <div class="form-group required">
    <%= f.label :value, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :value, class: "form-control", placeholder: "Setting value"  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-success" %>
      <%= link_to "Cancel", settings_url, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
